            "patterns": {
                "startdir": "SOUTH_EAST",
                "signature": "aqaaqww"
            }
        },
        {
            "type": "hex:pattern",
            "header": "Example 3",
            "text": "This pattern pushes -32: negate 1 + 5 + 10 * 2.",
